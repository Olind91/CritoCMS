@using Umbraco.Cms.Core.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage


<!-- Showcase Section--> 
<section class="showcase-full" style="background-color:#F0EFE9;">
    <div class="showcase container">
        <div class="content">
            <h1>@Model.Value("showcaseTitle")</h1>
            <p>@Model.Value("showcaseDescription")</p>
            <div class="buttons">
                <div class="theme-button">
                    <button class="login">@Model.Value("showcaseButtonText") <i class="fa-light fa-arrow-up-right"></i></button>
                </div>
                <div class="showcase-button">
                    <button class="white-button">Learn More <i class="fa-light fa-arrow-up-right"></i></button>
                </div> 
            </div>
        </div>

        <div class="image">

            @{
                var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
                if (showcaseImage != null)
                {
                    <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
                }
            }
            
        </div>
        
    </div>
    
    <img src="./static/background-effects/background-lines.svg" class="background-lines">
</section>